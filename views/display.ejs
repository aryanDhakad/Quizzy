<%- include('partials/header') %>
<input type="hidden" id="mxLength" value=<%= data.length %>>

<div>
    <h1 class="bg-info p-3 cust1">Student ID : <%= rollNo %>
    </h1>
    <h1> <span class="badge badge-success "><%= stat.right %> </span>
        <span class="badge badge-danger "><%= stat.wrong %></span>
        <span class="badge badge-primary cust1">Total : <%= stat.right - stat.wrong %> </span></h1>
</div>
<div class="my-5 p-4">
    <button class="btn btn-primary btn-lg" onclick="darkmode()">Dark Mode</button>
</div>
<div class="ans-area">
    <div class="row">
        <div class="col-lg-2 py-3">

            <% data.forEach(element => {%>
            <% if( element.id == 1){%>
            <button class="btn btn-success Any" type="button" id=<%= element.id %>><%= element.id %></button>
            <% } else { %>
            <button class="btn btn-primary Any" type="button" id=<%= element.id %>><%= element.id %></button>
            <%}%>
                <%})%>

        </div>

        <div class="col-lg-10 ">
            <% data.forEach(element => {%>
            <% if( element.id == 1){%>
            <div class="question" id="<%= element.id %>">
                <% } else { %>
                <div class="question" id="<%= element.id %>" style="display: none">
                    <%}%>
                <pre><h4 id="heading">Q<%= element.id %>. <%= element.title %> </h4>
                    </pre>
                    <h1 style="color: #000;">Your Answer : </h1>
                    <%for( i in element.check){%>
                    <div class="options1">

                        <h3 class="mx-4 px-4"> <%= element.check[i].optCont %> </h3>
                        <%if(element.check[i].optBool){%>
                        <span class="badge badge-success Bool mx-5">
                            <h3 class="resultOpt"> <%= element.check[i].optBool %> </h3>
                        </span>
                        <%}else{%>
                        <span class="badge badge-danger Bool mx-5">
                            <h3 class=""> <%= element.check[i].optBool %> </h3>
                        </span>
                        <%}%>
            </div>
            <%}%>
                        <h1 style="color: #000;">Correct Answer : </h1>
                        <%for( i in element.corr){%>
                        <div class="options1">

                            <h3 class="mx-4 px-4"> <%= element.corr[i].optCont %> </h3>
                            <%if(element.corr[i].optBool){%>
                            <span class="badge badge-success Bool mx-5">
                                <h3 class="resultOpt"> <%= element.corr[i].optBool %> </h3>
                            </span>
                            <%}else{%>
                            <span class="badge badge-danger Bool mx-5">
                                <h3 class=""> <%= element.corr[i].optBool %> </h3>
                            </span>
                            <%}%>
            </div>
            <%}%>
                        </div>

                        <%})%>
                        <div class="row">
                            <div class="col  my-5">

                                <button class="btn btn-lg  btn-primary nav my-3 py-3" type="button"
                                    value="-1">BACK</button>

                            </div>

                            <div class="col my-5">

                                <button class="btn btn-lg  btn-primary nav my-3 py-3" type="button"
                                    value="+1">NEXT</button>

                            </div>

                        </div>
                    </div>

                </div>
            </div>
        </div>


        <div class="d-block" style="margin: 100px auto 30px">
            <form action="/" method="get">
                <button class="btn btn-primary btn-lg btn-green w-100 px-5 cust1" type="submit">End
                    Test
                </button>
            </form>
        </div>



        <%- include('partials/footer') %>