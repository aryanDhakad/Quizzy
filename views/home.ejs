<%- include('partials/header') %>

<div class="jumbotron">
    <h1 class="display-4"> Quizzer Wizard</h1>
    <p class="lead"> An attempt is all it takes! </p>
</div>

<div class="row">
    <div class="col-6">
        <div class="card">
            <div class="card-header">
                Registeration
            </div>
            <form action="/register" method="post">
                <div class="card-body">
                    <label for="St">Enter Roll No. : </label>
                    <input type="text" name="St" placeholder="Enter ">
                    <br>
                    <label for="name1">Name of Student : </label>
                    <input type="text" name="name1" placeholder="Name ">
                </div>
                <div class="card-footer">
                    <button type="submit" name="btn1" class="btn btn-primary rounded shadow homeBtn"> Register </button>
                </div>
            </form>
        </div>

        <br>
    </div>
    <div class="col-6">
        <form action="/question" method="post">
            <div class="card">
                <div class="card-header">LOGIN</div>
                <div class="card-body">
                    <label for="rollNo">Student Roll No:</label>
                    <input type="text" name="rollNo" placeholder="Enter ">
                </div>
                <div class="card-footer">
                    <button type="submit" name="btn1" class="btn btn-primary rounded shadow homeBtn"> Start </button>
                </div>
                <br>
            </div>
        </form>
    </div>

</div>
<form method="get" action="/maker">
    <button type="submit" name="btnM" class="btn btn-primary  rounded shadow homeBtn">MAKER</button>
</form>


